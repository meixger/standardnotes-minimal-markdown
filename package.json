{
  "name": "@standardnotes/markdown-minimal2",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.0",
  "description": "A minimal2 Markdown editor with live rendering and in-text search via Ctrl/Cmd + F",
  "author": "Standard Notes Community",
  "main": "dist/dist.js",
  "sn": {
    "name": "Minimal2 Markdown",
    "content_type": "SN|Component",
    "main": "index.html",
    "area": "editor-editor",
    "spellcheckControl": true,
    "note_type": "markdown",
    "file_type": "md",
    "showInGallery": true
  },
  "scripts": {
    "dev": "pnpm i && pnpm build && pnpx http-server . -p 8000 --cors",
    "build": "grunt",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@standardnotes/component-relay": "^2.2.2",
    "babel-cli": "^6.26.0",
    "codemirror": "^5.56.0",
    "grunt": "^1.2.1",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^5.3.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-newer": "^1.3.0",
    "sass": "*",
    "sn-codemirror-search": "1.0.0",
    "sn-stylekit": "2.1.0"
  }
}
